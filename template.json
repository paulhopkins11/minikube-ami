{
    "_comment": "eu-west-2 - Ubuntu Server 18.04 LTS (HVM), SSD Volume Type - ami-00f6a0c18edb19300",
    "variables": {
        "aws_profile": "",
        "aws_region": "eu-west-2",
        "source_ami_id": "ami-00f6a0c18edb19300"
    },
    "builders": [{
        "type": "amazon-ebs",
        "profile": "{{user `aws_profile`}}",
        "region": "{{user `aws_region`}}",
        "source_ami": "{{user `source_ami_id`}}",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "ph-minikube {{timestamp}}"
    }],
    "provisioners": [
        {
            "type": "shell",
            "script": "{{template_dir}}/install-docker.sh"
        },
        {
            "type": "shell",
            "script": "{{template_dir}}/install-kubectl.sh"
        },
        {
            "type": "shell",
            "script": "{{template_dir}}/install-minikube.sh"
        },
        {
            "type": "shell",
            "script": "{{template_dir}}/install-helm3.sh"
        },
        {
            "type": "file",
            "source": "{{template_dir}}/files/",
            "destination": "/home/ubuntu/"
        },
        {
            "type": "shell",
            "inline": ["chmod +x /home/ubuntu/*.sh"]
        }
    ]
}